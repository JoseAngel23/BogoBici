<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/arrow_back_25dp_000000_fill0_wght400_grad0_opsz24_black" />

                <TextView
                    android:id="@+id/perfil_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_bold"
                    android:paddingTop="10sp"
                    android:text="@string/perfil"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/notifications_25dp_000000_fill0_wght400_grad0_opsz24" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="24sp"
                app:cardCornerRadius="10sp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/name_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="Nombre de usuario"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profile_photo"
                        app:layout_constraintVertical_bias="0.127" />

                    <ImageView
                        android:id="@+id/profile_photo"
                        android:layout_width="131dp"
                        android:layout_height="163dp"
                        android:src="@drawable/face_25dp_000000_fill0_wght400_grad0_opsz24"
                        app:circularflow_defaultRadius="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/settings_bton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="68dp"
                        android:src="@drawable/settings_26dp_000000_fill0_wght400_grad0_opsz24"
                        app:circularflow_radiusInDP="70sp"
                        app:layout_constraintEnd_toStartOf="@+id/share_bton"
                        app:layout_constraintHorizontal_bias="0.512"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profile_photo" />

                    <ImageButton
                        android:id="@+id/share_bton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="68dp"
                        android:layout_marginEnd="84dp"
                        android:src="@drawable/share_26dp_000000_fill0_wght400_grad0_opsz24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profile_photo" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/follow_followers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp"
                android:fontFamily="@font/inter_bold"
                android:paddingLeft="24sp"
                android:text="Seguidores y seguidos"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginLeft="24sp"
                android:layout_marginTop="16sp"
                android:layout_marginRight="24sp"
                android:backgroundTint="@color/GreyCard"
                app:cardCornerRadius="34sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/GreyCard"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="130sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_medium"
                        android:paddingLeft="16sp"
                        android:paddingTop="28sp"
                        android:text="Seguidores"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/imageButton8"
                        android:layout_width="10sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/Transparent"
                        android:paddingLeft="34sp"
                        android:src="@drawable/arrow_forward_ios_26dp_000000_fill0_wght400_grad0_opsz24" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginLeft="24sp"
                android:layout_marginTop="16sp"
                android:layout_marginRight="24sp"
                android:backgroundTint="@color/GreyCard"
                app:cardCornerRadius="34sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/GreyCard"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="130sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_medium"
                        android:paddingLeft="16sp"
                        android:paddingTop="28sp"
                        android:text="Seguidos"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/imageButton9"
                        android:layout_width="10sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/Transparent"
                        android:paddingLeft="34sp"
                        android:src="@drawable/arrow_forward_ios_26dp_000000_fill0_wght400_grad0_opsz24" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/Routes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp"
                android:fontFamily="@font/inter_bold"
                android:paddingLeft="24sp"
                android:text="Rutas"
                android:textSize="16sp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginLeft="24sp"
                android:layout_marginTop="16sp"
                android:layout_marginRight="24sp"
                android:layout_marginBottom="32sp"
                android:backgroundTint="@color/GreyCard"
                app:cardCornerRadius="34sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/GreyCard"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="130sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_medium"
                        android:paddingLeft="16sp"
                        android:paddingTop="28sp"
                        android:text="Completadas"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/imageButton10"
                        android:layout_width="10sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/Transparent"
                        android:paddingLeft="34sp"
                        android:src="@drawable/arrow_forward_ios_26dp_000000_fill0_wght400_grad0_opsz24" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>