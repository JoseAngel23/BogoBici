<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseSport">


    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pexels_pixabay_161172"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_choose_sport"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:fontFamily="@font/inter_bold"
            android:paddingLeft="@dimen/text_margin"
            android:paddingTop="@dimen/text_margin"
            android:paddingRight="@dimen/text_margin"
            android:text="@string/choose_sport"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/choose_sport_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_sport_text"
            android:fontFamily="@font/inter_medium"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/text_margin"
            android:paddingTop="@dimen/text_margin"
            android:paddingRight="@dimen/text_margin"
            android:textSize="16sp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="250sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            android:backgroundTint="#70FFFFFF"
            app:cardCornerRadius="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/senderismo_text"
                    android:layout_width="140sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:paddingTop="27sp"
                    android:text="Senderismo"
                    android:paddingLeft="10sp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/icon_one"
                    android:layout_width="30sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="20sp"
                    android:paddingTop="20sp"
                    android:paddingRight="5sp"
                    android:paddingBottom="20sp"
                    android:src="@drawable/add_circle_26dp_006b59_fill0_wght400_grad0_opsz24" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_two"
            android:layout_width="250sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:backgroundTint="#70FFFFFF"
            app:cardCornerRadius="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/ciclismo_ruta_text"
                    android:layout_width="140sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:paddingTop="27sp"
                    android:text="Ciclismo de ruta"
                    android:paddingLeft="10sp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="30sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="20sp"
                    android:paddingTop="20sp"
                    android:paddingRight="5sp"
                    android:paddingBottom="20sp"
                    android:src="@drawable/add_circle_26dp_006b59_fill0_wght400_grad0_opsz24" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="250sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:backgroundTint="#70FFFFFF"
            app:cardCornerRadius="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="140sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:paddingTop="27sp"
                    android:text="Atletismo"
                    android:paddingLeft="10sp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="20sp"
                    android:paddingTop="20sp"
                    android:paddingRight="5sp"
                    android:paddingBottom="20sp"
                    android:src="@drawable/add_circle_26dp_006b59_fill0_wght400_grad0_opsz24" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="250sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:backgroundTint="#70FFFFFF"
            app:cardCornerRadius="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="140sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:paddingTop="27sp"
                    android:text="CiclomontaÃ±ismo"
                    android:paddingLeft="10sp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="30sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="20sp"
                    android:paddingTop="20sp"
                    android:paddingRight="5sp"
                    android:paddingBottom="20sp"
                    android:src="@drawable/add_circle_26dp_006b59_fill0_wght400_grad0_opsz24" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView7"
            android:layout_width="250sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:backgroundTint="#70FFFFFF"
            app:cardCornerRadius="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="140sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:paddingTop="27sp"
                    android:text="Senderismo"
                    android:paddingLeft="10sp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="30sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="20sp"
                    android:paddingTop="20sp"
                    android:paddingRight="5sp"
                    android:paddingBottom="20sp"
                    android:src="@drawable/add_circle_26dp_006b59_fill0_wght400_grad0_opsz24" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button"
            android:layout_width="200sp"
            android:layout_height="60sp"
            android:text="FINALIZAR"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            android:backgroundTint="#FFFFFF" />
    </LinearLayout>
</FrameLayout>